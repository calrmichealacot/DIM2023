<h1 class="text-center">WELCOME</h1>
<div class="d-flex flex-column justify-content-center">
  <table class="table table-striped table bordered table-hover text-center">
    <% if user_signed_in? %>
      <h2> Hello <%= current_user.email %> </h2>
      <h2 class="text-center"> <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete } %></h2>
    <% else %>
      <h2 class="text-center"><%= link_to 'Sign in', new_user_session_path %></h2>
    <% end %>
  </table>
</div>